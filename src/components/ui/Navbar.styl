.navbar
    .container
        .flex-1
            display flex
            flex 1
            justify-content center
            align-items center

            .navbar-item
                color #fff
                cursor pointer
                display flex
                align-items center
                flex-grow 0
                flex-shrink 0
                line-height 1.5
                padding 0.5rem 0.75rem
                position relative
                text-decoration none
                height 100%
                text-transform uppercase
                padding-left 20px
                padding-right 20px

            .navbar-item.is-donate-button
                background-color #5d5c5c

            .navbar-item:hover
                color #fff
                background-color #292929

.is-login-banner-wrapper
    padding-top 5px
    padding-bottom 5px
    background-color darken(#363636, 10%)

    a
        color white

    a:hover
        color #80adbe

    .name
        color white

@media (max-width 768px)
    .navbar
        display none
        
    .is-login-banner-wrapper
        padding 0

        .level-right
            display flex
            margin-top 0
            flex-direction row

            .level-item
                margin-bottom 0
                padding 10px
